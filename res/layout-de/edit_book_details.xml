<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:ignore="DuplicateIds"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/row_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/theme_surfaceContainer"
                android:gravity="center"
                android:padding="@dimen/p_md" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/layout_heading"
                    android:text="@string/label_author" />

                <Button
                    android:id="@+id/field_author"
                    style="@style/layout_button_large"
                    android:layout_width="match_parent"
                    android:focusableInTouchMode="true"
                    android:nextFocusDown="@+id/field_title" >
                    <requestFocus/>
                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/layout_heading"
                    android:text="@string/label_title" />

                <EditText
                    android:id="@+id/field_title"
                    style="@style/field_text"
                    android:layout_width="match_parent"
                    android:inputType="textCapSentences"
                    android:nextFocusDown="@+id/field_isbn" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/row_isbn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/isbnHeading"
                    style="@style/layout_heading"
                    android:layout_alignParentTop="false"
                    android:layout_centerVertical="true"
                    android:text="@string/label_isbn" />

                <EditText
                    android:id="@+id/field_isbn"
                    style="@style/field_text"
                    android:layout_alignParentStart="false"
                    android:layout_toRightOf="@+id/isbnHeading"
                    android:inputType="text"
                    android:nextFocusDown="@+id/field_series" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/row_series"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/layout_heading"
                    android:text="@string/label_series" />

                <Button
                    android:id="@+id/field_series"
                    style="@style/layout_button_large"
                    android:layout_width="match_parent"
                    android:nextFocusDown="@+id/publisher" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_publisher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/layout_heading"
                    android:text="@string/label_publisher" />

                <AutoCompleteTextView
                    android:id="@+id/publisher"
                    style="@style/field_text"
                    android:layout_width="match_parent"
                    android:completionThreshold="2"
                    android:inputType="textCapSentences"
                    android:nextFocusDown="@+id/date_published" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/row_date_published"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/heading_date_published"
                    style="@style/layout_heading"
                    android:text="@string/label_date_published" />

                <Button
                    android:id="@+id/date_published"
                    style="@style/layout_button_large"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/heading_date_published"
                    android:nextFocusDown="@+id/field_bookshelf" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    style="@style/layout_heading"
                    android:text="@string/label_bookshelves" />

                <Button
                    android:id="@+id/field_bookshelf"
                    style="@style/layout_button_large"
                    android:layout_width="match_parent"
                    android:nextFocusDown="@+id/field_pages" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/row_pages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/heading_pages"
                    style="@style/layout_heading"
                    android:text="@string/label_pages" />

                <EditText
                    android:id="@+id/field_pages"
                    style="@style/field_text"
                    android:layout_below="@+id/heading_pages"
                    android:inputType="number"
                    android:nextFocusDown="@+id/field_list_price" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row_list_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/heading_list_price"
                    style="@style/layout_heading"
                    android:text="@string/label_list_price" />

                <EditText
                    android:id="@+id/field_list_price"
                    style="@style/field_text"
                    android:layout_below="@+id/heading_list_price"
                    android:inputType="numberDecimal"
                    android:nextFocusDown="@+id/field_format" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row_format"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/heading_title"
                    style="@style/layout_heading"
                    android:text="@string/label_format" />

                <ImageView
                    android:id="@+id/format_dropdown_button"
                    style="@style/layout_button_dropdown"
                    android:layout_alignBottom="@+id/field_format" />

                <AutoCompleteTextView
                    android:id="@+id/field_format"
                    style="@style/field_text"
                    android:layout_below="@+id/heading_title"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/format_dropdown_button"
                    android:completionThreshold="2"
                    android:nextFocusDown="@+id/field_genre"
                    android:singleLine="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/heading_title"
                    style="@style/layout_heading"
                    android:text="@string/label_genre" />

                <AutoCompleteTextView
                    android:id="@+id/field_genre"
                    style="@style/field_text"
                    android:layout_below="@+id/heading_title"
                    android:completionThreshold="2"
                    android:inputType="textCapSentences"
                    android:nextFocusDown="@+id/field_language" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/heading_title"
                    style="@style/layout_heading"
                    android:text="@string/label_language" />

                <AutoCompleteTextView
                    android:id="@+id/field_language"
                    style="@style/field_text"
                    android:layout_below="@+id/heading_title"
                    android:completionThreshold="2"
                    android:inputType="textCapSentences"
                    android:nextFocusDown="@+id/field_anthology"
                    android:singleLine="true" />
            </RelativeLayout>

            <CheckBox
                android:id="@+id/field_anthology"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:nextFocusDown="@+id/field_description"
                android:text="@string/label_is_anthology" />

            <TextView
                android:id="@+id/heading_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="12dp"
                android:text="@string/label_description"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <View
                android:id="@+id/header_divider"
                style="@style/layout_divider"
                android:paddingBottom="2dp"
                android:paddingTop="2dp" />

            <com.eleybourn.bookcatalogue.widgets.SafeSpannedTextView
                android:id="@+id/field_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/label_description"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>