<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_dialog" >

    <TextView
        android:id="@+id/dialog_title"
        style="@style/layout_dialog_title"
        android:text="@string/label_select_bookshelves"/>

    <LinearLayout
        android:id="@+id/bookshelf_dialog_root"
        style="@style/layout_main"
        android:layout_width="wrap_content"
        android:layout_below="@+id/dialog_title" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/p_lg"
        android:gravity="center"
        android:layout_below="@+id/bookshelf_dialog_root" >
        <Button
            android:id="@+id/bookshelf_dialog_button"
            style="@style/layout_button"
            android:text="@string/button_ok" />
    </LinearLayout>

</RelativeLayout>