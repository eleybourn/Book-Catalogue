<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_body">
    <!-- Root -->

    <include layout="@layout/layout_header" />
    <include layout="@layout/layout_background" />

    <!-- CONTENT -->
    <LinearLayout
        android:id="@+id/scrollView"
        style="@style/layout_scroll">

        <RelativeLayout
            android:id="@+id/root"
            style="@style/layout_main">

            <TextView
                android:id="@+id/field_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_title"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/top_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/field_title"
                android:gravity="top"
                android:orientation="horizontal" >

                <AutoCompleteTextView
                    android:id="@+id/field_series"
                    style="@style/locale_field_text_title"
                    android:layout_weight="2"
                    android:completionThreshold="2"
                    android:hint="@string/label_series" />

                <EditText
                    android:id="@+id/field_series_num"
                    style="@style/field_text"
                    android:importantForAutofill="no"
                    android:layout_width="150sp"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:hint="@string/label_series_num"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/add"
                    style="@style/layout_button"
                    android:text="@string/label_add" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:layout_below="@+id/top_buttons" />

            <TextView
                android:id="@+id/empty"
                style="@style/layout_paragraph"
                android:layout_below="@+id/top_buttons"
                android:text="@string/para_no_series" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        style="@style/layout_action_row" >
        <Button
            android:id="@+id/button_cancel"
            style="@style/layout_button_action"
            android:text="@string/button_cancel" />
        <Button
            android:id="@+id/button_confirm"
            style="@style/layout_button_action"
            android:text="@string/button_save" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>