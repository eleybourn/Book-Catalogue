<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_primary"
        android:contentDescription="@string/label_details"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextColor="@color/theme_surfaceDim"
        app:tabSelectedTextColor="@color/theme_onPrimary"
        app:tabIndicatorColor="@color/theme_onPrimary"  />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/p_xl"/>

</LinearLayout>