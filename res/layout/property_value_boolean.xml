<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_list_row"
    android:gravity="top"
    android:paddingHorizontal="@dimen/p_xl" >

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" >

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:text="" />
    </FrameLayout>

    <TextView
        android:id="@+id/field_name"
        style="@style/layout_paragraph"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/frame"
        android:paddingBottom="0dp"
        android:paddingTop="@dimen/p_md" />

    <TextView
        android:id="@+id/value"
        style="@style/layout_paragraph"
        android:layout_alignParentStart="true"
        android:layout_below="@id/field_name"
        android:layout_toStartOf="@+id/frame"
        android:paddingBottom="0dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <View
        style="@style/layout_divider"
        android:layout_below="@id/value" />

</RelativeLayout>