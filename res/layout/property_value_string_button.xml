<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_list_row"
    android:gravity="top"
    android:paddingHorizontal="@dimen/p_xl">

    <Button
        android:id="@+id/edit_button"
        style="@style/layout_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/label_edit"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/field_name"
        style="@style/layout_paragraph"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/edit_button"
        android:paddingTop="@dimen/p_md"
        android:paddingBottom="0dp" />

    <TextView
        android:id="@+id/value"
        style="@style/layout_paragraph"
        android:layout_below="@id/field_name"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/edit_button"
        android:paddingLeft="@dimen/p_md"
        android:paddingBottom="0dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <View
        style="@style/layout_divider"
        android:layout_alignParentBottom="true" />

</RelativeLayout>