<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/left_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text=""
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Export all books to GoodReads"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" 
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Running (17 events recorded)"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            tools:ignore="HardcodedText"/>

        <LinearLayout
            android:id="@+id/left_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/retry_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Retry 0 of 17, next at July 20, 2012 17:45:32 GMT"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffff30"
                android:textStyle="bold" 
                tools:ignore="HardcodedText"/>

            <Button
                android:id="@+id/retry"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="@string/retry" />
        </LinearLayout>

        <TextView
            android:id="@+id/error"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Last error: foo bar, not sure what really happened"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffff30"
            android:textStyle="bold" 
            tools:ignore="HardcodedText"/>

        <LinearLayout
            android:id="@+id/boring_stuff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/job_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Job ID 123, Queued at 20 Jul 2012 17:50:23 GMT"
                android:textAppearance="?android:attr/textAppearanceSmall" 
                tools:ignore="HardcodedText"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>