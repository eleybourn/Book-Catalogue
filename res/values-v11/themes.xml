<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogDividerTheme" >
        <item name="android:background">@android:color/holo_blue_light</item>
    </style>

    <style name="dataEntryButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:hint">@string/not_set</item>
        <item name="android:background">@drawable/gradient_button</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="editorFieldTextStyle" parent="@style/editorFieldTextStyleBase">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:hint">@string/not_set</item>
    </style>

</resources>