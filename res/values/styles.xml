<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="layout_body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_main</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="layout_scroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
        <item name="android:fillViewport">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">@dimen/p_xl</item>
    </style>

    <style name="layout_scroll_action_bar" parent="layout_scroll">
        <item name="android:layout_marginBottom">?attr/actionBarSize</item>
    </style>

    <style name="layout_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="layout_action_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|start</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">@dimen/p_lg</item>
        <item name="android:paddingVertical">@dimen/p_lg</item>
    </style>

    <style name="layout_dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/theme_surface</item>
        <item name="android:paddingHorizontal">@dimen/p_md</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="layout_dialog_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">@dimen/p_md</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="layout_card_md">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="cardBackgroundColor">?attr/colorSurfaceContainerLow</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="contentPadding">20dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="layout_card_icon">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:backgroundTintMode">src_in</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">?attr/colorSecondaryContainer</item>
        <item name="shapeAppearanceOverlay">@style/shapeAppearanceOverlay_rounded_corners</item>
    </style>

    <style name="layout_card_content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="layout_card_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="layout_card_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="layout_card_sm">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="cardBackgroundColor">?attr/colorSecondaryContainer</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="contentPadding">16dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="layout_list_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="layout_list_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingHorizontal">@dimen/p_md</item>
    </style>

    <style name="layout_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="layout_list_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingHorizontal">@dimen/p_md</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="layout_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/layout_divider</item>
    </style>

    <style name="layout_paragraph">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="layout_url" parent="layout_paragraph">
        <item name="android:textColor">@color/theme_primary</item>
    </style>

    <style name="layout_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="layout_button_large" parent="layout_button">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="layout_button_action" parent="layout_button">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxWidth">20dp</item>
        <item name="android:layout_marginHorizontal">@dimen/p_md</item>
    </style>

    <style name="layout_button_dropdown" parent="layout_button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:paddingHorizontal">@dimen/p_md</item>
        <item name="android:src">@drawable/expander_ic_minimized</item>
    </style>

    <style name="layout_button_image" parent="layout_button">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingHorizontal">@dimen/p_md</item>
    </style>

    <style name="layout_button_grabber" parent="layout_button">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:src">@drawable/ic_move_grabber</item>
    </style>

    <style name="layout_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/p_lg</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="layout_heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/p_md</item>
        <item name="android:paddingHorizontal">@dimen/p_md</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style for item in preferences lists -->
    <style name="layout_menu_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/padding_prefs_item</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <!-- Style for key of isbn search keyboard -->
    <style name="isbn_search_key">
        <item name="android:layout_width">@dimen/isbn_key_size</item>
        <item name="android:layout_height">@dimen/isbn_key_size</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <!-- Style for detail titles in read-only book details -->
    <style name="bookDetailsTitlesStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for text details in read-only book details -->
    <style name="bookDetailsTextStyle">
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_book_details_info</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- Style for text header data (typically title/author) in read-only book details -->
    <style name="bookDetailsHeaderStyle">
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <!-- Style for smaller text header data (typically isbn/pages) in read-only book details -->
    <style name="bookDetailsMinorDetailStyle">
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="field_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:hint">@string/not_set</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:textColor">@color/theme_onSurface</item>
    </style>

    <style name="locale_field_text" parent="@style/field_text">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="locale_field_text_name" parent="@style/locale_field_text">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="locale_field_text_title" parent="@style/locale_field_text">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="locale_field_text_language" parent="@style/locale_field_text">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">?attr/colorSurfaceInverse</item>
    </style>

    <style name="shapeAppearanceOverlay_rounded_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="DialogDividerTheme">
        <item name="android:background">@android:color/holo_blue_light</item>
    </style>


</resources>