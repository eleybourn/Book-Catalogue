<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogTitleTheme">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogDividerTheme">
        <item name="android:layout_height">1dip</item>
        <item name="android:background">#c0c0c0</item>
        <!--
            <item name="android:scaleType">fitXY</item>
            <item name="android:gravity">fill_horizontal</item>
            <item name="android:src">@android:drawable/dialog_divider_horizontal_light</item>

        -->
    </style>

    <style name="dataEntryButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:hint">@string/notset</item>
        <item name="android:background">@drawable/gradient_button_light</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="editorFieldTextStyle" parent="@style/editorFieldTextStyleBase">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:actionBarStyle">@style/Widget.AppTheme.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.BookCataloguegh.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

</resources>